{{#if shown}}
    <div class="modal-fog">
        <div class="modal-frame">

            <div class="modal-title">
                Create Flash Sale
                <div class="modal-close" {{action 'toggleModal'}}>
                  {{fa-icon "times" size=2}}
                </div>
            </div>
            <div class="modal-body">
                <form>
                  <label>
                    Item
                    {{input value=item}}
                  </label>
                  <label>
                    Discount %
                    {{input value=discount}}
                  </label>
                  <label>
                    Duration (minutes)
                    {{input value=duration}}
                  </label>
                  <br>
                  <button {{action "save"}}>Start Flash Sale</button>
                </form>
            </div>
        </div>
    </div>
{{/if}}